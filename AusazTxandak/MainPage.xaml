<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AusazTxandak.MainPage">

    <StackLayout Padding="10">
        <Label Text="Izenen Zerrenda"
                FontSize="24"
                HorizontalOptions="Center"/>

        <Button Text="Izenak Kargatu"
                Clicked="OnLoadNamesClicked"
                HorizontalOptions="Center"/>

        <ListView ItemsSource="{Binding Izenak}"
                  BackgroundColor="#ECECEC"
                  HorizontalOptions="CenterAndExpand"
                  WidthRequest="200"/>

        <Label x:Name="NombresLabel"
                FontSize="16"
                HorizontalOptions="Center"/>

        <Label Text="Fitxategiaren Izen berria:"
                FontSize="16"
                HorizontalOptions="Center"/>
        <Entry x:Name="FItxategiIzenentry"
                Placeholder="Ej. zerrenda.txt"
                HorizontalOptions="Center"/>

        <Label Text="Ruta osoa:"
                FontSize="16"
                HorizontalOptions="Center"/>
        <Entry x:Name="RutaFitxategiEntry"
                Placeholder="Ej. C:\MisArchivos\"
                HorizontalOptions="Center"/>

        <Button Text="Izenak gorde"
                Clicked="OnSaveNamesClicked"
                HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
